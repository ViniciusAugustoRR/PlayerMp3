<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player_Actv"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/playerp1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="5dp"
        >

        <ImageView
            android:id="@+id/capaAlbum_playeractv"
            android:layout_width="380dp"
            android:layout_height="380dp"
            app:srcCompat="@drawable/icon_album"
            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/playerp2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp"
                >

                <TextView
                    android:id="@+id/tv_musictitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:text="NOME DA MUSICA"
                    />

                <android.support.v7.widget.AppCompatSeekBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:id="@+id/progressMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="10dp">


                    <TextView
                        android:id="@+id/tempoDecorrido"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="2:00"/>


                    <TextView
                        android:id="@+id/tempoTotal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="1:00"/>
                </LinearLayout>

            </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_previus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_skipprevius" />

            <Button
                android:id="@+id/btn_playpause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_pause" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_skipnext" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

